@model NomiPro.ModelDB.EMPLEADOS

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Borrar informacion de el empleado</h2>

<h3>¿Esta seguro que desea eliminar este empleado de la lista?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label><b>Nombre del empleado</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            <label><b>Apellido del empleado</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt>
            <label><b>Correo</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Correo)
        </dd>

        <dt>
            <label><b>Numero telefonico</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefono)
        </dd>

        <dt>
            <label><b>Tipo de documento</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tipo_Documento)
        </dd>

        <dt>
            <label><b>Numero de documento</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Numero_Documento)
        </dd>

        <dt>
            <label><b>Estado de la contratacion</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt>
            <label><b>Cargo del empleado</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CARGOS.Nombre)
        </dd>

        <dt>
            <label><b>Horario lavoral</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HORARIO.Tipo_Horario)
        </dd>

        <dt>
            <label><b>Tipo de vinculacion</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TIPO_VINCULACION.Descripcion)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <br />
            <input type="submit" value="¡Borrar!" class="btn btn-outline-danger " />
            <a href="~/EMPLEADOS/index" class="btn btn-primary waves-effect">Volver atras</a>
        </div>
    }
</div>

