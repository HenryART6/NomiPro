@model NomiPro.ModelDB.PARAXEMPLE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar parafiscales por empleado</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
     
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_PAEM)

        <div class="form-group">
            <label><b>Nombre de parafiscales</b></label>
            <div class="col-md-10">
                @Html.DropDownList("ID_Parafiscales", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_Parafiscales, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label><b>Nombre de empleado</b></label>
            <div class="col-md-10">
                @Html.DropDownList("ID_EmpleP", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_EmpleP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label><b>Mes</b></label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Mes, NomiPro.helpers.Helpers.ListaMes(), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Mes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-outline-warning" />
                <a href="~/PARAXEMPLEs/index" class="btn btn-primary waves-effect">Volver atras</a>
            </div>
        </div>
    </div>
}

