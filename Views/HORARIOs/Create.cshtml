@model NomiPro.ModelDB.HORARIO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear horarios</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           <label><b>Tipo de horario</b></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tipo_Horario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tipo_Horario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           <label><b>Hora laboral</b></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hora_Trabajo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hora_Trabajo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <a href="~/HORARIOs/index" class="btn btn-primary waves-effect">Volver atras</a>
            </div>
        </div>
    </div>
}

