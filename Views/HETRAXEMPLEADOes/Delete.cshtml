@model NomiPro.ModelDB.HETRAXEMPLEADO

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Borrar horas extras por empleados</h2>

<h3>¿Esta seguro que desea eliminar este empleado de la lista?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
           <label><b>Numero de horas extras</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Numero_Horas)
        </dd>

        <dt>
           <label><b>Mes</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mes)
        </dd>

        <dt>
            <label><b>Nombre de empleado</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EMPLEADOS.Nombre)
        </dd>

        <dt>
           <label><b>Nombre de horas extras</b></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HORA_EXTRAS.Nombre)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="¡Borrar!" class="btn btn-outline-danger " />
    <a href="~/HETRAXEMPLEADOes/index" class="btn btn-primary waves-effect">Volver atras</a>
</div>
    }
</div>
